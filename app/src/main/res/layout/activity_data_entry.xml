<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DataEntryActivity">

    <TextView
        android:id="@+id/FingerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/InsulinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/MealTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-15dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp" />


            <ImageView
                android:id="@+id/time_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_av_timer_white_36dp" />

            <ImageView
                android:id="@+id/insulin_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_colorize_white_48dp" />

            <ImageView
                android:id="@+id/meal_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_local_dining_white_48dp" />

            <ImageView
                android:id="@+id/finger_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_touch_app_white_48dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/one_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="1"
                android:textColor="@android:color/white"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/four_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="4"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/seven_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="7"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/dot_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="."
                android:textScaleX="2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/two_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="2"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/five_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="5"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/eight_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="8"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/zero_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="0"
                android:textScaleX="2"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/three_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="3"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/six_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="6"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/nine_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="9"
                android:textScaleX="2"
                android:textStyle="bold" />

            <com.huami.watch.common.widget.HmHaloButton
                android:id="@+id/back_button"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/settings_bg"
                android:text="\u2190"
                android:textScaleX="2"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>